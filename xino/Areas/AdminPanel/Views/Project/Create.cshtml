@model ENDPOINTs.Models.DTOs.ProjectCreateDTOs

<div class="container mt-5">
    <h2 class="mb-4">ایجاد پروژه جدید</h2>

    <form asp-action="Create" asp-controller="Project" method="post" enctype="multipart/form-data">
        <div class="row g-3">

            <!-- عنوان پروژه -->
            <div class="col-md-6">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Slug -->
            <div class="col-md-6">
                <label asp-for="Slug" class="form-label"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <!-- تصویر هدر -->
            <div class="col-md-6">
                <label asp-for="HeaderImageFile" class="form-label"></label>
                <input asp-for="HeaderImageFile" class="form-control" type="file" />
                <span asp-validation-for="HeaderImageFile" class="text-danger"></span>
            </div>

            <!-- متراژ پروژه -->
            <div class="col-md-6">
                <label asp-for="ProjectSize" class="form-label"></label>
                <input asp-for="ProjectSize" class="form-control" />
                <span asp-validation-for="ProjectSize" class="text-danger"></span>
            </div>

            <!-- سال پروژه -->
            <div class="col-md-4">
                <label asp-for="YearProject" class="form-label"></label>
                <input asp-for="YearProject" class="form-control" />
                <span asp-validation-for="YearProject" class="text-danger"></span>
            </div>

            <!-- سبک پروژه -->
            <div class="col-md-4">
                <label asp-for="StyleProject" class="form-label"></label>
                <input asp-for="StyleProject" class="form-control" />
                <span asp-validation-for="StyleProject" class="text-danger"></span>
            </div>

            <!-- نمایشگاه مرتبط -->
            <div class="col-md-4">
                <label asp-for="ExhibitionProject" class="form-label"></label>
                <input asp-for="ExhibitionProject" class="form-control" />
                <span asp-validation-for="ExhibitionProject" class="text-danger"></span>
            </div>

            <!-- گالری تصاویر -->
            <div class="col-12">
                <label asp-for="GalleryImagesFiles" class="form-label"></label>
                <input asp-for="GalleryImagesFiles" class="form-control" type="file" multiple />
                <span asp-validation-for="GalleryImagesFiles" class="text-danger"></span>
            </div>

            <!-- نوع صفحه -->
            <div class="col-md-6">
                <label asp-for="PageType" class="form-label"></label>
                <input asp-for="PageType" class="form-control" />
            </div>

            <!-- عنوان متا -->
            <div class="col-md-6">
                <label asp-for="MetaTitle" class="form-label"></label>
                <input asp-for="MetaTitle" class="form-control" />
            </div>

            <!-- توضیحات متا -->
            <div class="col-md-6">
                <label asp-for="MetaDescription" class="form-label"></label>
                <input asp-for="MetaDescription" class="form-control" />
            </div>

            <!-- کلمات کلیدی متا -->
            <div class="col-md-6">
                <label asp-for="MetaKeywords" class="form-label"></label>
                <input asp-for="MetaKeywords" class="form-control" />
            </div>

            <!-- Canonical URL -->
            <div class="col-md-6">
                <label asp-for="CanonicalUrl" class="form-label"></label>
                <input asp-for="CanonicalUrl" class="form-control" />
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">ایجاد پروژه</button>
            <button type="reset" class="btn btn-secondary">پاک کردن فرم</button>
        </div>
    </form>
</div>

