
<div class="container mt-5">
    <h2 class="mb-4">ایجاد پروژه جدید</h2>

    <form>
        <div class="row g-3">

            <!-- عنوان پروژه -->
            <div class="col-md-6">
                <label class="form-label">عنوان پروژه</label>
                <input type="text" class="form-control" placeholder="مثلاً طراحی داخلی شرکت X">
            </div>

            <!-- Slug -->
            <div class="col-md-6">
                <label class="form-label">Slug</label>
                <input type="text" class="form-control" placeholder="مثلاً design-company-x">
            </div>

            <!-- تصویر هدر -->
            <div class="col-md-6">
                <label class="form-label">تصویر هدر</label>
                <input type="file" class="form-control">
            </div>

            <!-- متراژ پروژه -->
            <div class="col-md-6">
                <label class="form-label">متراژ پروژه</label>
                <input type="text" class="form-control" placeholder="مثلاً 120 متر">
            </div>

            <!-- سال پروژه -->
            <div class="col-md-4">
                <label class="form-label">سال پروژه</label>
                <input type="number" class="form-control" placeholder="مثلاً 1403">
            </div>

            <!-- سبک پروژه -->
            <div class="col-md-4">
                <label class="form-label">سبک پروژه</label>
                <input type="text" class="form-control" placeholder="مثلاً مدرن">
            </div>

            <!-- نمایشگاه مرتبط -->
            <div class="col-md-4">
                <label class="form-label">نمایشگاه مرتبط</label>
                <input type="text" class="form-control" placeholder="مثلاً نمایشگاه خودرو">
            </div>

            <!-- گالری تصاویر -->
            <div class="col-12">
                <label class="form-label">گالری تصاویر</label>
                <input type="file" class="form-control" multiple>
            </div>

            <!-- SEO و Meta -->
            <div class="col-md-6">
                <label class="form-label">نوع صفحه</label>
                <input type="text" class="form-control" placeholder="مثلاً پروژه دکوراسیون">
            </div>

            <div class="col-md-6">
                <label class="form-label">عنوان متا</label>
                <input type="text" class="form-control" placeholder="حداکثر 70 کاراکتر">
            </div>

            <div class="col-md-6">
                <label class="form-label">توضیحات متا</label>
                <input type="text" class="form-control" placeholder="حداکثر 160 کاراکتر">
            </div>

            <div class="col-md-6">
                <label class="form-label">کلمات کلیدی متا</label>
                <input type="text" class="form-control" placeholder="مثلاً طراحی، دکوراسیون، داخلی">
            </div>

            <div class="col-md-6">
                <label class="form-label">Canonical URL</label>
                <input type="text" class="form-control" placeholder="مثلاً /projects/design-company-x">
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">ایجاد پروژه</button>
            <button type="reset" class="btn btn-secondary">پاک کردن فرم</button>
        </div>
    </form>
</div>
