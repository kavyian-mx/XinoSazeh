<div class="container mt-5">

    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="m-0">افزودن ادمین جدید</h5>
        </div>

        <div class="card-body">

            <form>

                <!-- Username -->
                <div class="mb-3">
                    <label class="form-label">نام کاربری</label>
                    <input type="text" class="form-control" placeholder="مثال: AdminUser01">
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label class="form-label">رمز عبور</label>
                    <input type="password" class="form-control" placeholder="رمز عبور قوی وارد کنید">
                    <small class="text-muted d-block mt-1">
                        باید شامل حرف بزرگ، کوچک، عدد و یک کاراکتر خاص باشد.
                    </small>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-success px-4">
                    ذخیره ادمین
                </button>

            </form>

        </div>
    </div>

</div>
