<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">ایجاد بلاگ جدید</h4>
        </div>

        <div class="card-body">

            <form>

                <div class="row">

                    <!-- Title -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">عنوان بلاگ</label>
                        <input type="text" class="form-control" placeholder="مثال: معرفی سبک‌های طراحی داخلی">
                    </div>

                    <!-- Slug -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Slug</label>
                        <input type="text" class="form-control" placeholder="مثال: interior-design-styles">
                    </div>

                    <!-- Image Header -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">تصویر هدر</label>
                        <input type="file" class="form-control">
                    </div>

                    <!-- TitleBlug -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">عنوان بلاگ (نمایشی)</label>
                        <input type="text" class="form-control" placeholder="عنوان نمایشی صفحه">
                    </div>

                    <!-- Category -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">دسته‌بندی</label>
                        <select class="form-select">
                            <option value="News">اخبار</option>
                            <option value="Article">مقالات</option>
                            <option value="TopExhibition">غرفه‌های برتر</option>
                        </select>
                    </div>

                    <!-- Source -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">منبع</label>
                        <input type="text" class="form-control" placeholder="در صورت وجود">
                    </div>

                    <!-- Body -->
                    <div class="col-12 mb-3">
                        <label class="form-label">متن بلاگ</label>
                        <textarea class="form-control" rows="6" placeholder="متن کامل بلاگ..."></textarea>
                    </div>

                    <!-- Gallery -->
                    <div class="col-12 mb-4">
                        <label class="form-label">گالری تصاویر</label>
                        <input type="file" class="form-control" multiple>
                    </div>

                    <!-- PageType -->
                    <div class="col-md-4 mb-3">
                        <label class="form-label">نوع صفحه</label>
                        <input type="text" class="form-control" placeholder="مثال: blog">
                    </div>

                    <!-- MetaTitle -->
                    <div class="col-md-4 mb-3">
                        <label class="form-label">عنوان متا</label>
                        <input type="text" class="form-control" placeholder="Meta Title">
                    </div>

                    <!-- Canonical -->
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Canonical URL</label>
                        <input type="text" class="form-control" placeholder="https://example.com/page">
                    </div>

                    <!-- MetaDescription -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">توضیحات متا</label>
                        <textarea class="form-control" rows="3" placeholder="Meta Description"></textarea>
                    </div>

                    <!-- MetaKeywords -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">کلمات کلیدی متا</label>
                        <input type="text" class="form-control" placeholder="مثال: بلاگ, طراحی داخلی, مقالات">
                    </div>

                </div>

                <button class="btn btn-primary px-4">ثبت</button>

            </form>

        </div>
    </div>
</div>
